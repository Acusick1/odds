# API Configuration
ODDS_API_KEY=your_api_key_here
ODDS_API_BASE_URL=https://api.the-odds-api.com/v4
ODDS_API_QUOTA=20000

# Database Configuration
DATABASE_URL=postgresql+asyncpg://postgres:dev_password@localhost:5432/odds

# Sampling Configuration
SAMPLING_MODE=adaptive
FIXED_INTERVAL_MINUTES=30

# Data Quality
ENABLE_VALIDATION=true
REJECT_INVALID_ODDS=false

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/odds_pipeline.log

# Alerts (Optional - for future use)
DISCORD_WEBHOOK_URL=
ALERT_ENABLED=false
